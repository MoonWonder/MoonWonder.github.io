  version = "0.1.X"
  # 网站描述
  description = "Ybw051114"
  # 网站关键词
  keywords = ["OI", "Hugo","blog"]
  # 网站默认主题 ("light", "dark", "auto")
  defaultTheme = "auto"

  # 主页信息设置
  ## 主页模式 ("post", "other")
  home_mode = "post"
  ## 主页在 post 模式下每页 post 显示数量
  home_paginate = 6
  ## 主页显示头像的 URL
  avatar = "images/avatar.png"
